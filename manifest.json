{
  "manifest_version": 3,
  "name": "Smart Search",
  "version": "2.0",
  "description": "Automatically redirects questions to Perplexity AI instead of Google. \n Ss icons created by Grafixpoint - Flaticon",
  "permissions": ["storage", "tabs", "clipboardWrite", "declarativeNetRequest", "webNavigation"],
  "host_permissions": ["*://www.google.com/*", "*://www.perplexity.ai/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://www.perplexity.ai/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "32": "icons/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icons/icon.png"
    }
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
