{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["scripts/**/*.js"],
      "env": {
        "node": true,
        "browser": false
      }
    }
  ],
  "ignorePatterns": [
    "package.json",
    "package-lock.json",
    ".prettierrc",
    ".gitignore",
    "LICENSE",
    "*.md",
    "dist/**",
    "web-ext-artifacts/**"
  ]
}
